<div class="container mt-5 text-center">
    <h1 class="text-primary">Welcome to your work calendar</h1>
    <p>You can see all upcoming events you have planned here</p>
    <%= month_calendar(events: @calendars) do |date, calendars| %>
        <div class="border border-success p-2 bg-primary rounded-top">
            <%= date %>
        </div>
        <% calendars.each do |calendar| %>
            <div class="card mb-3">
                <div class="card-header bg-info text-white border border-info p-1 rounded">
                    <h5 class="card-title">
                        <%= link_to calendar.title, calendar, class: "text-white" %>
                    </h5>
                </div>
                <div class="card-body">
                    <p class="card-text">
                        <%= calendar.description %>
                    </p>
                </div>
                <div class="card-footer">
                    <p class="card-text">
                        From: <%= calendar.start_time.strftime('%A, %b, At: %I:%M') %>
                    </p>
                    <p class="card-text">
                        To: <%= calendar.end_time.strftime('%A, %b, At: %I:%M') %>
                    </p>
                </div>
            </div>
        <% end %>
    <% end %>
</div>
